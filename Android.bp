ndk_headers {
    name: "libcamera2ndk_headers",
    from: "include/camera/ndk/",
    to: "camera",
    srcs: ["include/camera/ndk/**/*.h"],
}

ndk_headers {
    name: "libmediandk_headers",
    from: "include/ndk/",
    to: "media",
    srcs: ["include/ndk/**/*.h"],
}

subdirs = [
    "camera/ndk",
    "media/libmedia",
    "media/libnbaio",
    "media/libstagefright/foundation",
]
